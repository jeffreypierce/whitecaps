doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title
      | Whitecaps
    meta(name='viewport', content='width=device-width')
    link(rel='shortcut icon', type="image/x-icon", href='/favicon.ico')
    link(rel='stylesheet', href='app.css')
    script(src='vendor.min.js')

  body(ng-app="whitecaps")
    include _mixins.jade
    .container(ng-controller="container" ng-class="currentSection")


      section(ng-controller="home" class="home")
        .title-bar
          .title-bar__bg
            figure.title-bar--front
              .title-bar__title
                  .whitecaps.play WHITECAPS
              .title-bar__next
                +chevron('l')
        canvas(width="1024", height="768")
        .play-section
          input#play.switch(type="checkbox", ng-model="isPlaying", ng-change="soundControl()")
          label.switch__label(for="play")



      section(ng-controller="noise" class="noise")
        .control-bar
          slider(ng-repeat="bar in bars", model="bar", active="setActive(bar.name)", deactive="setActive('')")

        .title-bar
          .title-bar__bg(ng-class="{'title-bar--show-top': active != ''}")
            figure.title-bar--front
              .title-bar__prev
                +chevron('r')
              .title-bar__title noise
              .title-bar__next
                +chevron('l')

            figure.title-bar--top
              span.title-bar__title {{ active }}

      section(ng-controller="hum" class="hum")
        .control-bar
          slider(ng-repeat="bar in bars", model="bar", active="setActive(bar.name)", deactive="setActive('')")

        .title-bar
          .title-bar__bg(ng-class="{'title-bar--show-top': active != ''}")
            figure.title-bar--front
              .title-bar__prev
                +chevron('r')
              .title-bar__title hum
              .title-bar__next
                +chevron('l')

            figure.title-bar--top
              span.title-bar__title {{ active }}

      nav
        ul
          li.home
          li.noise
          li.hum
          li.effects
          li.about

    script(src='app.js')
